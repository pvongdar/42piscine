#include <stdio.h>

void ft_div_mod(int a, int b, int *div, int *mod)
{
 
	       *div = a / b;
	       *mod = a % b;
  			printf("%d", *div);
  			printf("%d", *mod);
}


int main()
{
  int a;
  int b;
  int *div;
  int *rem;
  div = &a;
  rem = &b;
 
  a = 45;
  b = 5;
  
  ft_div_mod(a, b, div, rem);
  printf("%d", *div);
  printf("%d", *rem);
  return 0;

}
