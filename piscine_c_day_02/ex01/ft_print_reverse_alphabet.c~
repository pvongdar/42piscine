void	ft_putchar (char c);

void	ft_print_reverse_alphabet(void)
{
  char daletter;
  daletter = 'z';

  while(daletter >= 'a')
    {
      ft_putchar(daletter);
      daletter--;
      ft_putchar('\n');
    }
}

